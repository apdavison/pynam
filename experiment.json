/**
 * Demo experiment
 */
{
	/*
	 * The data parameters implicitly specify the size of the network
	 */
	"data": {
		"n_bits_in": 16,
		"n_bits_out": 16, // Corresponds to the number of neurons
		"n_ones_in": 3,
		"n_ones_out": 3
//		"n_samples": 100 // The number of samples is automatically determined
	},

	/**
	 * Network topology and neuron parameters
	 */
	"topology": {
		"params": {
			"cm": 0.2,
			"e_rev_E": 0,
			"v_rest": -70,
			"v_reset": -75,
			"v_thresh": -55,
			"tau_m": 10.0
		},
		"multiplicity": 1, // Size of a neuron population
		"param_noise": {
			// Specify noise parameters here
		},
		"neuron_type": "IF_cond_exp",
		"w": 0.01,
		"sigma_w": 0.0
	},

	/**
	 * Input data specification
	 */
	"input": {
		"burst_size": 1,
		"time_window": 100.0,
		"isi": 1.0,
		"sigma_t": 0.0,
		"sigma_t_offs": 0.0,
		"p0": 0.0,
		"p1": 0.0
	},

	/**
	 * Output data specification
	 */
	"output": {
		"burst_size": 1
	},

	/**
	 * Experiments to be conducted
	 */
	"experiments": [
		{
			"name": "Sweep $\\sigma t$ for $m=n=16$, $c=d=3$",
			"sweeps": {
				"input.sigma_t": {"min": 0.0, "max": 10.0, "count": 40}
			},
			"repeat": 20
		}
	]
}

